extends ../layout

block content
  .container
    p
      | Click on your score to view the competition visualized
    p
      | Click on the "Download" button next to your score to
      | download submission data for the competition
    - var jOffset = 0
    .panel.panel-default
      .panel-heading
        h3.panel-title
          a(data-toggle='collapse',
            href='#' + 'scoreboard')= 'Scoreboard'
      .panel-collapse.collapse(id='scoreboard')
        table.table.table-striped.table-bordered
          thead
            tr
              th
              each category in categories
                th= category.name
              th total
          tbody
            each row, i in matrix
              if teams[i] !== "zstub" 
                if teams[i] !== "TAtest"
                  - jOffset = 0
                  - var j = jOffset
                  tr
                    td= teams[i]
                    - var sum = 0
                    each category in categories
                      if category.name == "round1"
                        if (teams[i] in round1)
                          td= round1[teams[i]]
                          - sum += round1[teams[i]]
                        else
                          td
                      else if category.name == "round2"
                        if (teams[i] in round2)
                          td= round1[teams[i]]
                          - sum += round1[teams[i]] * 2
                        else
                          td
                      else if category.name == "round3"
                        if (teams[i] in round3)
                          td= round1[teams[i]]
                          - sum += round1[teams[i]] * 3
                        else
                          td
                      else
                        - var total = 0
                        each graph in category.graphs
                          - var col = matrix[i][j]
                          if col
                            each entry, k in col
                              - total += entry.score
                          - j++
                        - jOffset += category.graphs.length
                        if total
                          td= total
                        else
                          td
                    if sum
                      td= sum
                    else
                      td
    #results.panel-group
      - jOffset = 0
      each category in categories
        .panel.panel-default
          .panel-heading
            h3.panel-title
              a(data-toggle='collapse',
                data-parent='#results',
                href='#' + category.name)= category.name
          .panel-collapse.collapse(id=category.name)
            table.table.table-striped.table-bordered
              thead
                tr
                  th
                  each graph in category.graphs
                    th= graph
                  th total
              tbody
                each row, i in matrix
                  if teams[i] !== "TAtest"
                    if teams[i] !== "zstub"
                      - var j = jOffset
                      tr
                        td= teams[i]
                        - var total = 0
                        each graph in category.graphs
                          - var col = matrix[i][j]
                          td
                            if col
                              each entry, k in col
                                - total += entry.score
                                if k !== 0
                                  br
                                - var teamsList = entry.teams.join(' ')
                                a(href='/graph/' + entry.id,
                                  data-toggle='popover',
                                  data-placement='top',
                                  data-teams-list=teamsList)= entry.score
                                  &nbsp;
                                if selfteam === teams[i]
                                  - var competitiondata = graph + '-' + selfteam + '.json'
                                  a(href='/download/' + competitiondata, 
                                    data-toggle='popover',
                                    data-placement='top',
                                    data-teams-list=teamsList)= 'Download'
                          - j++
                        td= total
          - jOffset += category.graphs.length

append js
  script(src='/js/load-tooltips.js')
